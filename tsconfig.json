        "libs/gothinkster/angular-directives/src/index.ts"
      ],
      "@nx-seed/material/schematics": ["libs/material/schematics/src/index.ts"],
      "@nx-seed/linkedin/cypress": ["libs/linkedin/cypress/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
